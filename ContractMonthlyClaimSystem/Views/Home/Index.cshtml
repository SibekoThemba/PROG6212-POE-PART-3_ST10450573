@{
    ViewData["Title"] = "Contract Monthly Claim System";
}

<div class="container-fluid px-0">
    <!-- Hero Section -->
    <div class="bg-gradient-primary text-white py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold mb-3">Contract Monthly Claim System</h1>
                    <p class="lead mb-4">Streamlining claim submissions and approvals for academic contractors</p>
                    <div class="d-flex gap-3">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="btn btn-light btn-lg" asp-controller="Claims" asp-action="Index">
                                <i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-light btn-lg" asp-area="Identity" asp-page="/Account/Register">
                                <i class="fas fa-user-plus me-2"></i>Get Started
                            </a>
                            <a class="btn btn-outline-light btn-lg" asp-area="Identity" asp-page="/Account/Login">
                                <i class="fas fa-sign-in-alt me-2"></i>Login
                            </a>
                        }
                    </div>
                </div>
                <div class="col-lg-4 text-center">
                    <i class="fas fa-file-invoice-dollar display-1 opacity-75"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container py-5">
        <div class="row text-center mb-5">
            <div class="col">
                <h2 class="text-primary mb-3">Streamlined Claim Management</h2>
                <p class="text-muted">Efficient, transparent, and automated claim processing</p>
            </div>
        </div>

        <div class="row g-4">
            <!-- Feature 1 -->
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-primary text-white rounded-circle mx-auto mb-3">
                            <i class="fas fa-user-graduate fa-2x"></i>
                        </div>
                        <h5 class="card-title text-primary">For Lecturers</h5>
                        <p class="card-text text-muted">
                            Submit claims easily with auto-calculation. Upload supporting documents and track your claim status in real-time.
                        </p>
                        <ul class="list-unstyled text-start">
                            <li><i class="fas fa-check text-success me-2"></i>Auto-calculation</li>
                            <li><i class="fas fa-check text-success me-2"></i>Document upload</li>
                            <li><i class="fas fa-check text-success me-2"></i>Status tracking</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Feature 2 -->
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-success text-white rounded-circle mx-auto mb-3">
                            <i class="fas fa-users-cog fa-2x"></i>
                        </div>
                        <h5 class="card-title text-success">For Coordinators</h5>
                        <p class="card-text text-muted">
                            Efficiently review and approve claims with automated workflows and comprehensive verification tools.
                        </p>
                        <ul class="list-unstyled text-start">
                            <li><i class="fas fa-check text-success me-2"></i>Automated workflows</li>
                            <li><i class="fas fa-check text-success me-2"></i>Quick approval</li>
                            <li><i class="fas fa-check text-success me-2"></i>Document review</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Feature 3 -->
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-info text-white rounded-circle mx-auto mb-3">
                            <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                        <h5 class="card-title text-info">For HR</h5>
                        <p class="card-text text-muted">
                            Process payments, generate reports, and manage lecturer data with comprehensive administrative tools.
                        </p>
                        <ul class="list-unstyled text-start">
                            <li><i class="fas fa-check text-success me-2"></i>Payment processing</li>
                            <li><i class="fas fa-check text-success me-2"></i>Report generation</li>
                            <li><i class="fas fa-check text-success me-2"></i>Data management</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Section -->
    <div class="bg-light py-5">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3">
                    <div class="stat-card">
                        <i class="fas fa-bolt text-warning fa-2x mb-3"></i>
                        <h3 class="text-primary fw-bold">Fast</h3>
                        <p class="text-muted">Quick claim processing</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card">
                        <i class="fas fa-shield-alt text-success fa-2x mb-3"></i>
                        <h3 class="text-primary fw-bold">Secure</h3>
                        <p class="text-muted">Role-based access control</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card">
                        <i class="fas fa-chart-pie text-info fa-2x mb-3"></i>
                        <h3 class="text-primary fw-bold">Automated</h3>
                        <p class="text-muted">Smart calculations & workflows</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card">
                        <i class="fas fa-file-contract text-primary fa-2x mb-3"></i>
                        <h3 class="text-primary fw-bold">Compliant</h3>
                        <p class="text-muted">Audit-ready documentation</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CTA Section -->
    <div class="bg-primary text-white py-5">
        <div class="container text-center">
            <h3 class="mb-3">Ready to streamline your claim process?</h3>
            <p class="mb-4">Join hundreds of academic professionals using our system</p>
            @if (User.Identity.IsAuthenticated)
            {
                <a class="btn btn-light btn-lg" asp-controller="Claims" asp-action="Create">
                    <i class="fas fa-plus-circle me-2"></i>Submit New Claim
                </a>
            }
            else
            {
                <a class="btn btn-light btn-lg" asp-area="Identity" asp-page="/Account/Register">
                    <i class="fas fa-rocket me-2"></i>Get Started Today
                </a>
            }
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    }

    .feature-icon {
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .stat-card {
        padding: 2rem 1rem;
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
    }

    .btn {
        transition: all 0.3s ease;
    }

    .btn:hover {
        transform: translateY(-2px);
    }
</style>